%h2 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'sign-up form-vertical' }) do |f|
  = f.error_notification
  = f.input :name, :autofocus => true, :input_html => {:id => 'user_signup_name'}
  = f.input :email, :required => true, :input_html => {:id => 'user_signup_email'}
  = f.input :password, :required => true, :input_html => {:id => 'user_signup_password'}
  = f.input :password_confirmation, :required => true
  = f.button :submit, 'Create my account', :class => 'btn-primary'
