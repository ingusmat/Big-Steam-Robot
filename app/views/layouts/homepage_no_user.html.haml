!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Big Steam Robot"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{href: 'http://fonts.googleapis.com/css?family=Coustard:400,900', rel: 'stylesheet', type: 'text/css'}
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css", media: :all
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css", media: :all
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body.homepage.homepage-no-user
    %header.page-header
      .container
        .content
          = yield(:header)
    #main{:role => "main"}
      %img{class: "background-gear", src: "/images/gear1.svg"}
      .container
        .content
          = render 'layouts/messages'
          = yield
    %footer.page-footer
      =render 'layouts/footer'
